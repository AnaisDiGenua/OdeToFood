@using OdeToFood.Core
@model Restaurant

<div class="card text-center card-custom">
    <div class="card-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" asp-page="./Detail" asp-route-restaurantId="@Model.Id"><i class="fa-solid fa-eye"></i></a>
        <a class="btn btn-warning" asp-page="./Edit" asp-route-restaurantId="@Model.Id"><i class="fa-solid fa-pencil"></i></a>
        <a class="btn btn-danger" asp-page="./Delete" asp-route-restaurantId="@Model.Id"><i class="fa-solid fa-trash"></i></a>
    </div>
</div>

